<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
    <%= link_to task.title, task_path(task) %>
    <%= link_to 'Delete', task_path(task) , method: :delete, data: { confirm: "Delete #{task.title}?" } %>
    <%= link_to 'Edit task', edit_task_path(task) %>
    </li>
  <% end %>
</ul>

<%= link_to 'Add new task', new_path %>
